<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:background="@android:color/white">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imgUsuarioPrincipal"
        android:src="@drawable/ic_account_circle_black_24dp"
        android:layout_marginLeft="6dp"
        app:civ_border_width="0dp"
        app:civ_border_color="@color/colorAccent"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linear_notificacao"
        android:orientation="horizontal"
        android:layout_marginLeft="-20dp"
        android:layout_marginTop="10dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_notificacao"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/notificacao"
            android:text="0"
            android:textSize="16sp"
            android:maxLength="2"
            android:textColor="@color/cardview_light_background"
            android:layout_marginLeft="-20.5dp"
            android:layout_gravity="center_vertical"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lyComentar"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Diga uma novidade..."
            android:id="@+id/lbNovidade"
            android:layout_marginLeft="6dp"
            android:clickable="false"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/postFoto"
            android:src="@android:drawable/ic_menu_camera"
            android:tint="@color/wallet_bright_foreground_holo_light"
            android:layout_marginLeft="6dp"/>
    </LinearLayout>


</LinearLayout>
